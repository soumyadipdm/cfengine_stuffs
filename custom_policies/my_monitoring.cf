bundle agent my_monitoring {
  vars:
      "zabbix_server" string => "$(my_definitions.infra_server[infra01.local.net])";

  packages:
    centos::
      "zabbix-agent"
        package_policy => "delete",
        package_method => yum_rpm,
        package_select => "==",
        package_architectures => { "x86_64" };
}
